{ 
  "manifest_version": 3,
  "name": "Presence",
  "version": "0.1.0",
  "description": "Adds a sidebar for collaboration and agent interaction on web pages.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://app.themetalayer.org/*"
  ],
  "oauth2": {
    "client_id": "240745106929-q6hc1b06mochkuu4gf6uo3d2mopvg337.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "openid"
    ]
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "images/*.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://bvshfzikwwjasluumfkr.supabase.co wss://bvshfzikwwjasluumfkr.supabase.co http://216.238.91.120:3002 https://app.themetalayer.org https://www.googleapis.com;"
  }
} 