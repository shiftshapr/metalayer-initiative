{
  "manifest_version": 3,
  "name": "Metalayer Sidebar",
  "version": "1.0.0",
  "description": "A sidebar overlay for Metalayer, providing chat, community, and agent features.",
  "action": {
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "permissions": ["activeTab", "storage", "scripting", "identity"],
  "host_permissions": ["<all_urls>"],
  "oauth2": {
    "client_id": "12678945690-u7nil11ob7ha3qhn7qmj3u0d309h7sih.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "icon.svg",
        "static/js/main.c78eecb5.js",
        "static/js/main.c78eecb5.js.map",
        "static/css/main.4d08bd62.css",
        "static/css/main.4d08bd62.css.map",
        "static/js/main.dd4e5c72.js",
        "static/js/main.dd4e5c72.js.map",
        "static/css/main.6ae32b9e.css",
        "static/css/main.6ae32b9e.css.map"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 